#include<stdio.h>

int main(){
    pattern(65,5);

}
void pattern(int a,int n){
    for(int i=0; i<n;i++){
        a=65;
        for(int j=0;j<2*n-1;j++){
            if(j<i || j>2*n-2-i){
               printf("   ");
            }
            else{
               printf(" %c ",a++);
            }
        }
        printf("\n");
    }

    for(int i=n-2; i>=0;i--){
        a=65;
        for(int j=0;j<2*n-1;j++){
            if(j<i || j>2*n-2-i){
               printf("   ");
            }
            else{
               printf(" %c ",a++);
            }
        }
        printf("\n");
    }
}
